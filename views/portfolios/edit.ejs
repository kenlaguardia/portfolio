<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Edit <%= portfolio.name %> portfolio</h1>
		<div style="width:30%; margin: 25px auto;">
			<form action="/portfolios/<%= portfolio._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="portfolio[name]" id="" value="<%= portfolio.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="portfolio[image]" id="" value="<%= portfolio.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="portfolio[coffee]" id="" value="<%= portfolio.coffee %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="portfolio[tags]" id="" value="<%= portfolio.tags %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="portfolio[siteurl]" id="" value="<%= portfolio.siteurl %>">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="portfolio[description]" id="" cols="30" rows="10" placeholer="Description">
						<%= portfolio.description %>
					</textarea>
				</div>
				<div class="form-group">
					<input class="btn btn-primary btn-lg btn-block"type="submit" value="Update!">
				</div>
			</form>
			<a href="/portfolios" class="btn btn-default btn-large">Go Back</a>
		</div>
		
	</div>
</div>

<% include ../partials/footer %>