<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Edit <%= campground.name %> Campground</h1>
		<div style="width:30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" id="" value="<%= campground.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" id="" value="<%= campground.image %>">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="campground[description]" id="" cols="30" rows="10" placeholer="Description">
						<%= campground.description %>
					</textarea>
				</div>
				<div class="form-group">
					<input class="btn btn-primary btn-lg btn-block"type="submit" value="Update!">
				</div>
			</form>
			<a href="/campgrounds" class="btn btn-default btn-large">Go Back</a>
		</div>
		
	</div>
</div>

<% include ../partials/footer %>