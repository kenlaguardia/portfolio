<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Create a New Campgrounds</h1>
		<div style="width:30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" id="" placeholder="Name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" id="" placeholder="Image URL">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" id="" placeholder="Description">
				</div>
				<div class="form-group">
					<input class="btn btn-primary btn-lg btn-block"type="submit" value="Submit">
				</div>
			</form>
			<a href="/campgrounds" class="btn btn-default btn-large">Go Back</a>
		</div>
		
	</div>
</div>

<% include ../partials/footer %>